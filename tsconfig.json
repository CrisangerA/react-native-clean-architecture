{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@modules/*": ["src/modules/*"],
      "@config/*": ["src/config/*"],
      "@assets/*": ["src/assets/*"],
      "@theme/*": ["src/theme/*"]
    }
  }
}
